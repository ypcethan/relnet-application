<% content_for :title do %>
  Sign up
<% end %>

<style>

 .login-body .container {
   width: 600px;
   margin-top: 80px;
 }

</style>


<%= render 'user_sessions/login_box' do %>

  <%= form_for @facade.form, url: team_path, :method => :post, remote: true do |f| %>

    <div id="form-errors"></div>

    <h2>Register for your free 30 day trial</h2>

    <div class="form-group">
      <div class="field">
        <%= f.label :team_name, 'Team Name' %><br />
        <%= f.text_field :team_name, class: 'form-control', required: true, autofocus: true, id: 'team_name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :email, 'Your email' %><br />
        <%= f.email_field :email, class: 'form-control', required: true, id: 'email' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, class: 'form-control', required: true, id: 'first_name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: 'form-control', required: true, id: 'last_name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control', required: true, id: 'password' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :confirm_password %><br />
        <%= f.password_field :confirm_password, class: 'form-control', required: true, id: 'confirm_password' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= button_tag class: 'btn btn-primary' do %>
          <i class="fa fa-check" aria-hidden="true"></i> Sign up
        <% end %>
      </div>
      <div class="actions">
      </div>
    </div>
  <% end %>
<% end %>
